algoritmo "classifiacao_escolar"

var

idade: inteiro

inicio

escreva ("Digite a idade do aluno: ")
leia (idade)

escolha idade

caso "0", "1", "2", "3"
escreva ("Bebê")

caso "4", "5", "6", "7", "8", "9", "10"
escreva ("Criança")

caso "11", "12", "13", "14", "15", "16", "17"
escreva ("Adolescente")

outrocaso
escreva("Adulto")

fimescolha

fimalgoritmo


